{
  "id": "com.zont",
  "sdk": 2,
  "name": {
    "en": "Zont"
  },
  "version": "1.0.0",
  "compatibility": "1.x",
  "author": {
    "name": "Sprut",
    "email": "sprut666666@gmail.com",
    "website": "https://www.youtube.com/sprut666666"
  },
  "contributors": {
    "developers": [
      {
        "name": "Anton Petrov",
        "email": "petrov.aap@gmail.com",
        "website": "https://github.com/itsmepetrov"
      }
    ]
  },
  "description": {
    "en": "Zont for Homey",
    "nl": "Zont voor Homey"
  },
  "images": {
    "large": "./assets/images/large.png",
    "small": "./assets/images/small.png"
  },
  "category": "appliances",
  "drivers": [
      {
          "id": "car_alarm",
          "name": {
              "en": "Car Alarm",
              "nl": "Car Alarm"
          },
          "images": {
              "large": "./drivers/car_alarm/assets/images/large.png",
              "small": "./drivers/car_alarm/assets/images/small.png"
          },
          "class": "car_alarm",
          "capabilities": [
              "locked",
              "onoff",
              "speaker_playing",
              "alarm_contact",
              "alarm_tamper",
              "alarm_motion"
          ],
          "capabilitiesOptions": {
              "locked": {
                  "title": {
                      "en": "Guard state",
                      "nl": "Guard state",
                      "ru": "Охрана"
                  }
              },
              "onoff": {
                  "title": {
                      "en": "Auto ignition",
                      "nl": "Auto ignition",
                      "ru": "Автозапуск"
                  }
              },
              "speaker_playing": {
                  "title": {
                      "en": "Siren",
                      "nl": "Siren",
                      "ru": "Сирена"
                  }
              },
              "alarm_contact": {
                  "title": {
                      "en": "Ignition state",
                      "nl": "Ignition state",
                      "ru": "Зажигание"
                  }
              },
              "alarm_tamper": {
                  "title": {
                      "en": "Engine state",
                      "nl": "Engine state",
                      "ru": "Нет связи"
                  }
              },
              "alarm_motion": {
                  "title": {
                      "en": "Shock",
                      "nl": "Shock",
                      "ru": "Тревога"
                  }
              }
          },
          "mobile": {
              "components": [
                  {
                      "id": "toggle",
                      "capabilities": [ "onoff" ],
                      "options": {
                          "showTitle": true
                      }
                  },
                  {
                      "id": "toggle",
                      "capabilities": [ "locked" ],
                      "options": {
                          "showTitle": true
                      }
                  },
                  {
                      "id": "sensor",
                      "capabilities": [ "alarm_motion", "alarm_contact", "alarm_tamper" ],
                      "options": {
                          "showTitle": true
                      }
                  }
              ]
          },
          "pair": [
              {
                  "id": "start"
              },
              {
                  "id": "list_devices",
                  "template": "list_devices",
                  "navigation": {
                      "next": "add_devices"
                  }
              },
              {
                  "id": "add_devices",
                  "template": "add_devices"
              }
          ]
      }
  ],
  "flow": {
    "triggers": [
      {
          "id": "doorbell_firmware_changed",
          "title": {
              "en": "Firmware changed",
              "nl": "Firmware is veranderd"
          },
          "args": [
              {
                  "name": "device",
                  "type": "device",
                  "filter": "driver_id=doorbell"
              }
          ],
          "tokens": [
              {
                  "name": "old_firmware",
                  "type": "string",
                  "title": {
                      "en": "old version",
                      "nl": "oude versie"
                  },
                  "example": {
                      "en": "1.0.0",
                      "nl": "1.0.0"
                  }
              }, {
                  "name": "new_firmware",
                  "type": "string",
                  "title": {
                      "en": "new version",
                      "nl": "nieuwe versie"
                  },
                  "example": {
                      "en": "2.0.0",
                      "nl": "2.0.0"
                  }
              }
          ]
      },
      {
        "id": "siren_on",
        "title": {
          "en": "Siren on"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "siren_off",
        "title": {
          "en": "Siren off"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "guard_state_on",
        "title": {
          "en": "Guard state on"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "guard_state_off",
        "title": {
          "en": "Guard state off"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "auto_ignition_on",
        "title": {
          "en": "Auto ignition on"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "auto_ignition_off",
        "title": {
          "en": "Auto ignition off"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "ignition_state_on",
        "title": {
          "en": "Ignition state yes"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "ignition_state_off",
        "title": {
          "en": "Ignition state no"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "shock_on",
        "title": {
          "en": "Shock yes"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "shock_off",
        "title": {
          "en": "Shock no"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "is_siren_active",
        "title": {
          "en": "Siren alarm is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "is_guard_state_active",
        "title": {
          "en": "Guard state is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "is_auto_ignition_active",
        "title": {
          "en": "Auto ignition is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "is_ignition_state_active",
        "title": {
          "en": "Ignition state is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      },
      {
        "id": "is_shock_active",
        "title": {
          "en": "Shock alarm is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=car_alarm"
          }
        ]
      }
    ]
  }
}
