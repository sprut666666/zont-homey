{
    "id": "com.zont",
    "sdk": 2,
    "name": {
        "en": "Zont"
    },
    "version": "1.0.0",
    "compatibility": "1.x",
    "author": {
        "name": "Sprut",
        "email": "sprut666666@gmail.com",
        "website": "https://www.youtube.com/sprut666666"
    },
    "contributors": {
        "developers": [
            {
                "name": "Anton Petrov",
                "email": "petrov.aap@gmail.com",
                "website": "https://github.com/itsmepetrov"
            }
        ]
    },
    "description": {
        "en": "Zont for Homey",
        "nl": "Zont voor Homey"
    },
    "images": {
        "large": "./assets/images/large.png",
        "small": "./assets/images/small.png"
    },
    "category": "appliances",
    "drivers": [
        {
            "id": "car_alarm",
            "name": {
                "en": "Car Alarm",
                "nl": "Car Alarm"
            },
            "images": {
                "large": "./drivers/car_alarm/assets/images/large.png",
                "small": "./drivers/car_alarm/assets/images/small.png"
            },
            "class": "car_alarm",
            "capabilities": [
                "locked.guard_state",
                "onoff.auto_ignition",
                "onoff.siren",
                "onoff.engine_block",
                "alarm_motion.ignition_state",
                "alarm_motion.engine_state",
                "alarm_motion.shock",
                "alarm_contact.hood",
                "alarm_contact.trunk",
                "alarm_contact.doors",
                "alarm_contact.door1",
                "alarm_contact.door2",
                "alarm_contact.door3",
                "alarm_contact.door4",
                "measure_temperature.engine",
                "measure_temperature.cabin",
                "measure_temperature.outside",
                "measure_temperature.none"
            ],
            "capabilitiesOptions": {
                "locked.guard_state": {
                    "title": {
                        "en": "Guard state",
                        "nl": "Guard state",
                        "ru": "Охрана"
                    }
                },
                "onoff.auto_ignition": {
                    "title": {
                        "en": "Auto ignition",
                        "nl": "Auto ignition",
                        "ru": "Автозапуск"
                    }
                },
                "onoff.siren": {
                    "title": {
                        "en": "Siren",
                        "nl": "Siren",
                        "ru": "Сирена"
                    }
                },
                "onoff.engine_block": {
                    "title": {
                        "en": "Engine block",
                        "nl": "Engine block",
                        "ru": "Блокировка"
                    }
                },
                "alarm_motion.ignition_state": {
                    "title": {
                        "en": "Ignition state",
                        "nl": "Ignition state",
                        "ru": "Зажигание"
                    }
                },
                "alarm_motion.engine_state": {
                    "title": {
                        "en": "Engine state",
                        "nl": "Engine state",
                        "ru": "Двигатель"
                    }
                },
                "alarm_motion.shock": {
                    "title": {
                        "en": "Shock",
                        "nl": "Shock",
                        "ru": "Тревога"
                    }
                },
                "alarm_contact.hood": {
                    "title": {
                        "en": "Hood",
                        "nl": "Hood",
                        "ru": "Капот"
                    }
                },
                "alarm_contact.trunk": {
                    "title": {
                        "en": "Trunk",
                        "nl": "Trunk",
                        "ru": "Багажник"
                    }
                },
                "alarm_contact.doors": {
                    "title": {
                        "en": "Doors",
                        "nl": "Doors",
                        "ru": "Двери"
                    }
                },
                "alarm_contact.door1": {
                    "title": {
                        "en": "Door 1",
                        "nl": "Door 1",
                        "ru": "1 дверь"
                    }
                },
                "alarm_contact.door2": {
                    "title": {
                        "en": "Door 2",
                        "nl": "Door 2",
                        "ru": "2 дверь"
                    }
                },
                "alarm_contact.door3": {
                    "title": {
                        "en": "Door 3",
                        "nl": "Door 3",
                        "ru": "3 дверь"
                    }
                },
                "alarm_contact.door4": {
                    "title": {
                        "en": "Door 4",
                        "nl": "Door 4",
                        "ru": "4 дверь"
                    }
                },
                "measure_temperature.engine": {
                    "title": {
                        "en": "Engine temperature",
                        "nl": "Engine temperature",
                        "ru": "Температура двигателя"
                    }
                },
                "measure_temperature.cabin": {
                    "title": {
                        "en": "Cabin temperature",
                        "nl": "Cabin temperature",
                        "ru": "Температура салона"
                    }
                },
                "measure_temperature.outside": {
                    "title": {
                        "en": "Outside temperature",
                        "nl": "Outside temperature",
                        "ru": "Температура снаружи"
                    }
                },
                "measure_temperature.none": {
                    "title": {
                        "en": "Temperature (unspecified)",
                        "nl": "Temperature (unspecified)",
                        "ru": "Температура (назначение не задано)"
                    }
                }
            },
            "mobile": {
                "components": [
                    {
                        "id": "toggle",
                        "capabilities": [ "onoff.auto_ignition" ],
                        "options": {
                            "showTitle": true
                        }
                    },
                    {
                        "id": "toggle",
                        "capabilities": [ "locked.guard_state" ],
                        "options": {
                            "showTitle": true
                        }
                    },
                    {
                        "id": "sensor",
                        "capabilities": [ "alarm_motion.shock", "alarm_motion.engine_state", "alarm_motion.ignition_state" ],
                        "options": {
                            "showTitle": true
                        }
                    }
                ]
            },
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
            ]
        }
    ],
    "flow": {
        "triggers": [
            {
                "id": "doorbell_firmware_changed",
                "title": {
                    "en": "Firmware changed",
                    "nl": "Firmware is veranderd"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=doorbell"
                    }
                ],
                "tokens": [
                    {
                        "name": "old_firmware",
                        "type": "string",
                        "title": {
                            "en": "old version",
                            "nl": "oude versie"
                        },
                        "example": {
                            "en": "1.0.0",
                            "nl": "1.0.0"
                        }
                    }, {
                        "name": "new_firmware",
                        "type": "string",
                        "title": {
                            "en": "new version",
                            "nl": "nieuwe versie"
                        },
                        "example": {
                            "en": "2.0.0",
                            "nl": "2.0.0"
                        }
                    }
                ]
            }
        ]
    }
}
